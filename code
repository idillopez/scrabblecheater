LETTER_VALUES = {"A": 1,
                 "B": 3,
                 "C": 3,
                 "D": 2,
                 "E": 1,
                 "F": 4,
                 "G": 2,
                 "H": 4,
                 "I": 1,
                 "J": 1,
                 "K": 5,
                 "L": 1,
                 "M": 3,
                 "N": 1,
                 "O": 1,
                 "P": 3,
                 "Q": 10,
                 "R": 1,
                 "S": 1,
                 "T": 1,
                 "U": 1,
                 "V": 4,
                 "W": 4,
                 "X": 8,
                 "Y": 4,
                 "Z": 10,
                 "#": 0}

class Tahta:
#this is how we add letters to designated locations on the board

    th = np.empty((3,3), dtype=str)
    th[0,2]="C"
    output_th = np.array_str(th)
#print(th)

    Tahta_List = np.ndarray.tolist(th)
#to filter, we changed numpy to a dataframe and renamed rows and columns for ease of access (but we didn't use this....yet)
    df = pd.DataFrame(th)
    df.columns = ["1","2","3"]
    df.set_axis(["1","2","3"], inplace = True)

    for col in range(th.shape[1]):
        output_col = str(th[:, col])
        harfler_col = re.findall('[A-Z]', output_col)
        #print(harfler_col)
     
    
    for row in th:
        output_row = str(row)
        harfler_row = re.findall('[A-Z]', output_row)
        #print(harfler_row)

class Words:
#we got the weighted value of a word at the board and created a new dictionary with only strings that have a lenght of maximum three
    weight = 0    
    WORDS_IN_THE_CORPUS = {}   
#we made or code read the lines in the txt and iterate the lines to get the words one by one then we removed empty characters and cleaned up our data
    file = open('/content/drive/MyDrive/Colab Notebooks/Collins Scrabble Words (2019).txt', 'r')      
    Lines = file.readlines()    
    for word in Lines:  
        word = word.replace("\n", "")  
        word.strip()    
        if len(word) == 2 or len(word) == 3:    # gets the words whose length is two or three
            #counter = counter + 1
            for letter in word:  # travers the word to get the letters
                weight += LETTER_VALUES[letter]  
            WORDS_IN_THE_CORPUS[word] = weight  
            #print(word, weight)  # comment this after testing!!!
            weight = 0  # after getting the weighted value of a word, cleans the weight variable
    print(WORDS_IN_THE_CORPUS)  # comment this after testing!!!
    #print('the number of words: ', counter)  # comment this after testing!!!

user_rack = []
def start_game():
    tahta = Tahta()
    words = Words()
    for i in range(7):
        letter = input("Please enter your rack: ")
        letter.upper()
        user_rack.append(letter)
    column = input("Please enter column: ")
    row = input("Please enter row: ")
    tahta_letter = input("Please enter letter on board: ")
    tahta.output_th[row,column] = tahta_letter
    print(tahta.th)

    
start_game()
